#!/bin/bash
# vim: set filetype=sh :
set -e

if [ ! -f "$(pwd)/.golang" ]; then
	echo "No \`.golang\` file (in \`$(pwd)\`), Run \`docker-golang-init\`"
	exit 1
fi

source "$(pwd)/.golang"

docker run \
	--rm \
	-t \
	--volumes-from $GOLANG_VOLUMES_FROM \
	-v /tmp:/tmp \
	--entrypoint gofmt golang:$GOLANG_VERSION "$@"

