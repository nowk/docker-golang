#!/bin/sh
# vim: set filetype=sh :
set -e

VERSION=$(cat $(dirname $(readlink -f "$0"))/../VERSION)
WORKDIR=$(echo $(pwd) | sed "s#$GOPATH#/go/#")

docker run --rm -t \
	--volumes-from gov${VERSION} \
	-v ${GOPATH}/src:/go/src \
	-w ${WORKDIR} \
	-u $(id -u $(whoami)) \
	--entrypoint /opt/go/bin/godoc \
	nowk/golang:${VERSION} "$@" | replipe -a /go -b ${GOPATH}
