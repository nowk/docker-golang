#!/bin/bash
# vim: set filetype=sh :
set -e

COMPOSE_DIR="$(dirname $0)"
WORKING_DIR="$(echo $(pwd) | sed -E "s#(^.+)/go/#/go/#")"

# debug
echo "$WORKING_DIR" >> "$(dirname $0)/../go.log"
echo "$@" >> "$(dirname $0)/../go.log"

docker-compose --file="${COMPOSE_DIR}/../docker-compose.yml" run --rm -w $WORKING_DIR go "$@"
