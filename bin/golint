#!/bin/bash
# vim: set filetype=sh :
set -e

if [ ! -f "$(pwd)/.golang" ]; then
	echo "No \`.golang\` file (in \`$(pwd)\`), Run \`docker-golang-init\`"
	exit 1
fi

source "$(pwd)/.golang"

# golint wrapper
#
#     go get -u github.com/golang/lint/golint
#

docker run \
	--rm \
	-t \
	--volumes-from $GOLANG_VOLUMES_FROM \
	--entrypoint /go/bin/golint golang:$GOLANG_VERSION "$@"

